{
    "java.compile.nullAnalysis.mode": "automatic",
    "editor.formatOnSave": true,
    "java.configuration.updateBuildConfiguration": "automatic",
    "protoc": {
        "path": "/home/linuxbrew/.linuxbrew/bin/protoc",
        "compile_on_save": false,
        "options": [
            // "--proto_path=protos",
            // "--proto_path=protos/v2",
            "--proto_path=${workspaceRoot}/src/main/proto",
            // "--proto_path=${env.GOPATH}/src/proto",
            "--java_out=src/main/java/com/unajo/adoptions"
        ],
    },
    "clang-format.style": "{BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 100, AllowShortBlocksOnASingleLine: false, AllowShortFunctionsOnASingleLine: None}",
    "clang-format.executable": "/home/linuxbrew/.linuxbrew/opt/clang-format/bin/clang-format",
    "[proto3]": {
        "editor.defaultFormatter": "xaver.clang-format"
    }
}